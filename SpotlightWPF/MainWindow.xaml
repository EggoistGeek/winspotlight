<Window x:Class="SpotlightWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotlightWPF"
        mc:Ignorable="d"
        Title="Spotlight" Height="60" Width="700" Style="{DynamicResource WindowStyle}" WindowStyle="None" AllowsTransparency="True" Foreground="White" ResizeMode="NoResize" Icon="Images/spotlight.ico" WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown" Deactivated="Window_Deactivated"
>

    <Border Background="Transparent" BorderBrush="#4C808080" BorderThickness="1">
        <Grid>

            <TextBox Name="searchBox" Style="{DynamicResource TextBoxStyle}"  Height="40" TextWrapping="Wrap" Width="680" FontSize="20" Background="#00161A21" BorderThickness="0" Padding="0, 5" TextChanged="TextBox_TextChanged" Margin="16,11,0,0" VerticalAlignment="Top" PreviewKeyDown="Window_KeyDown"/>
            <StackPanel Name="ui" VerticalAlignment="Top" Margin="0,60,0,0" >

            </StackPanel>
        </Grid>
    </Border>
</Window>